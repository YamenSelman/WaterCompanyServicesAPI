@model ModelLibrary.Consumer
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card bg-opacity-25 container py-2 m-auto shadow mainCard">
    <div class="card-body text-center">
        <div class="bg-white bg-opacity-50 rounded-pill p-1 fs-2">
            <h2 class=" fw-bold">Register new consumer account</h2>
        </div>

        <form method="post" action="Register">
            <div class="row mt-4 m-auto">
                <div class="col pb-4 mx-2 border rounded border-dark shadow-lg">
                    <h4 class="bg-dark bg-opacity-10 w-75 m-auto border border-dark rounded shadow py-3 px-1 text-white text-opacity-75 my-3">
                        Personal Details
                    </h4>
                    <div class="row mt-2">
                        <div class="col-5">
                            <label class="control-label fs-4 text-white text-opacity-75 fw-bold">Full Name</label>
                        </div>
                        <div class="col-7">
                            <input asp-for="ConsumerName" class="form-control text-center" />
                            <span asp-validation-for="ConsumerName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-5">
                            <label class="control-label fs-4 text-white text-opacity-75 fw-bold">Address</label>

                        </div>
                        <div class="col-7">
                            <input asp-for="ConsumerAddress" class="form-control text-center" />
                            <span asp-validation-for="ConsumerAddress" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-5">
                            <label class="control-label fs-4 text-white text-opacity-75 fw-bold">Mobile Number</label>
                        </div>
                        <div class="col-7">
                            <input asp-for="ConsumerPhone" class="form-control text-center" />
                            <span asp-validation-for="ConsumerPhone" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-2">
                            <label class="control-label fs-4 text-white text-opacity-75 fw-bold">Gender</label>
                        </div>
                        <div class="col-4">
                            @Html.DropDownListFor(m=>m.ConsumerGender,new List<SelectListItem>{new SelectListItem{Value="male",Text="Male"},new SelectListItem{Value="female",Text="Female"}}, new {@class="form-control text-center"})
                            <span asp-validation-for="ConsumerGender" class="text-danger"></span>
                        </div>
                        <div class="col-2">
                            <label class="control-label fs-4 text-white text-opacity-75 fw-bold">Age</label>
                        </div>
                        <div class="col-4">
                            <input asp-for="ConsumerAge" class="form-control text-center" />
                            <span asp-validation-for="ConsumerAge" class="text-danger"></span>
                        </div>
                    </div>

                </div>
                <div class="col pb-4 mx-2 border rounded border-dark shadow-lg">
                    <h4 class="bg-dark bg-opacity-10 w-75 m-auto border border-dark rounded shadow py-3 px-1 text-white text-opacity-75 my-3">
                        Account Details
                    </h4>
                    <div class="row mt-2">
                        <div class="col-5">
                            <label class="control-label fs-4 text-white text-opacity-75 fw-bold">User Name</label>
                        </div>
                        <div class="col-7">
                            <input asp-for="User.UserName" class="form-control text-center" />
                            <span asp-validation-for="User.UserName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-5">
                            <label class="control-label fs-4 text-white text-opacity-75 fw-bold">Password</label>
                        </div>
                        <div class="col-7">
                            <input type="password" asp-for="User.Password" class="form-control text-center" />
                            <span asp-validation-for="User.Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-5">
                            <label class="control-label fs-4 text-white text-opacity-75 fw-bold">Confirm</label>
                        </div>
                        <div class="col-7">
                            <input type="password" name="passwordConfirm" class="form-control text-center" />
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-5">
                            <label class="control-label fs-4 text-white text-opacity-75 fw-bold">User Type</label>
                        </div>
                        <div class="col-7">
                            <input asp-for="User.UserType" class="form-control text-center" readonly="readonly" />
                        </div>
                    </div>
                </div>

                <div class="card-body text-center form-group mt-3">
                    <button class="btn btn-outline-light btn-lg px-2 w-25 fw-bold" type="submit">Register</button>
                    <a href="index" class="btn btn-outline-danger btn-lg px-2 w-25 fw-bold">Cancel</a>
                </div>
            </div>

        </form>
    </div>
</div>