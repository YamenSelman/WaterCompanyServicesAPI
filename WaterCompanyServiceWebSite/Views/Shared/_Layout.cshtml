<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WaterCompanyServiceWebSite</title>
    <link runat="server" rel="shortcut icon" href="~/img/favicon.ico" type="image/x-icon" />
    <link runat="server" rel="icon" href="~/img/favicon.ico" type="image/ico" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WaterCompanyServiceWebSite.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>
<body class="bg-dark bg-opacity-10">
    <style type="text/css">
        .icn {
            -webkit-transition: all 1s ease;
            -moz-transition: all 1s ease;
            -ms-transition: all 1s ease;
            transition: all 1s ease;
        }

            .icn:hover {
                transform:scale(1.2);
            }
    </style>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm bg-dark bg-opacity-25  border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-black box-shadow fw-bold" style="height:50px;" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/img/wcs.png" class="mh-100 icn"/>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse justify-content-between d-sm-inline-flex">
                    <ul class="navbar-nav w-100 flex-grow-1">

                        @if (DataAccess.CurrentUser != null)
                        {
                            <li class="nav-item ms-auto">
                                <a class="btn btn-outline-light mx-2 fw-bold" asp-area="" asp-controller="Home" asp-action="RedirectUser">@DataAccess.CurrentUser.UserName</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-danger mx-2 fw-bold" asp-area="" asp-controller="Home" asp-action="Logout">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item ms-auto">
                                <a class="btn btn-outline-success mx-2 fw-bold" asp-area="" asp-controller="Home" asp-action="Login">Login</a>
                            </li>
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container p-0 mw-100 m-0" style="  object-fit: cover;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer bg-black bg-opacity-25 text-muted">
        <div class="container text-dark">
            &copy; 2023 - SVU - Basel Jnad - Master Project
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
