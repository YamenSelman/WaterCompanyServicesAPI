@model ModelLibrary.User
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="gradient-custom">
    <div class="container py-2 h-100">
        <div class="row d-flex justify-content-center align-items-center">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">
                        <form method="post" action="Login">
                            <div class="mb-md-4 mt-md-4 pb-3">

                                <h2 class="fw-bold mb-2 text-uppercase">Login</h2>
                                <p class="text-white-50 mb-5">Please enter your login and password!</p>

                                <div class="form-outline form-white mb-4">
                                    <label asp-for="UserName" class="control-label"></label>
                                    <input asp-for="UserName" class="text-center form-control" />
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>

                                <div class="form-outline form-white mb-4">
                                    <label asp-for="Password" class="control-label"></label>
                                    <input type="password" asp-for="Password" class="text-center form-control" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <span class="text-danger fw-bold fs-4">@ViewData["message"]</span>
                                </div>

                                <div class="btn-group-lg">
                                <button class="btn btn-outline-light btn-lg w-50" type="submit">Login</button>
                                </div>
                            </div>

                            <div>
                                <p class="mb-0">
                                    Don't have an account? <a href="Register" class=" text-white-50 fw-bold">Register Now</a>
                                </p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

