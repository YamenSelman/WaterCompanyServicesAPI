@model ModelLibrary.Employee

@{
    ViewData["Title"] = "AddEmployee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row text-center bg-dark bg-opacity-10 mb-2 rounded-3 p-3 m-auto">
    <h1>Add Employee</h1>
</div>

<section class="gradient-custom">
    <div class="container py-2 h-100">
        <div class="row d-flex justify-content-center align-items-center">
            <div class="">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <form asp-action="AddEmployee">
                        <div class="card-body p-5 text-center">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row">
                                <div class="col-6">
                                    <div class="form-group">
                                        <label asp-for="EmployeeName" class="control-label"></label>
                                        <input asp-for="EmployeeName" class="text-center form-control" />
                                        <span asp-validation-for="EmployeeName" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="EmployeePhone" class="control-label"></label>
                                        <input asp-for="EmployeePhone" class="text-center form-control" />
                                        <span asp-validation-for="EmployeePhone" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="EmployeeAddress" class="control-label"></label>
                                        <input asp-for="EmployeeAddress" class="text-center form-control" />
                                        <span asp-validation-for="EmployeeAddress" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group">
                                        <label asp-for="User.UserName" class="control-label"></label>
                                        <input asp-for="User.UserName" class="text-center form-control" />
                                        <span asp-validation-for="User.UserName" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="User.Password" class="control-label"></label>
                                        <input asp-for="User.Password" type="password" class="text-center form-control" />
                                        <span asp-validation-for="User.Password" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Department.DepartmentName" class="control-label"></label>
                                        @Html.DropDownListFor(m=>m.Department.Id,new SelectList(ViewData["departments"] as List<ModelLibrary.Department>,"Id","DepartmentName"), new {@class="form-control text-center"})
                                        <span asp-validation-for="Department.Id" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <span class="text-danger fw-bold fs-4">@ViewData["message"]</span>
                            </div>

                            <div class="form-group mt-3">
                                <input type="submit" value="Create" class="btn btn-lg btn-outline-primary w-25" />
                                <a asp-action="UserManagement" class="btn btn-lg btn-outline-danger w-25">Cancel</a>

                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

